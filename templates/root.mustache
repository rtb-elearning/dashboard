<main id="elby-dashboard-root" class="local-elby-dashboard"
      data-user='{{{user_data_json}}}'
      data-stats='{{{stats_data_json}}}'
      data-sidenav='{{{sidenav_config_json}}}'
      data-theme='{{{theme_config_json}}}'
      {{#courses_report_json}}data-courses-report='{{{courses_report_json}}}'{{/courses_report_json}}
      data-page='{{active_page}}'>
	<div class="loading-skeleton">
		<!-- Main Content Skeleton -->
		<div class="skeleton-main">
			<!-- Page Title -->
			<div class="skeleton-bar skeleton-title"></div>

			<!-- Stats Cards Grid -->
			<div class="skeleton-stats-grid">
				<div class="skeleton-stats-card">
					<div class="skeleton-bar skeleton-icon"></div>
					<div class="skeleton-bar skeleton-number"></div>
					<div class="skeleton-bar skeleton-label"></div>
				</div>
				<div class="skeleton-stats-card">
					<div class="skeleton-bar skeleton-icon"></div>
					<div class="skeleton-bar skeleton-number"></div>
					<div class="skeleton-bar skeleton-label"></div>
				</div>
				<div class="skeleton-stats-card">
					<div class="skeleton-bar skeleton-icon"></div>
					<div class="skeleton-bar skeleton-number"></div>
					<div class="skeleton-bar skeleton-label"></div>
				</div>
				<div class="skeleton-stats-card">
					<div class="skeleton-bar skeleton-icon"></div>
					<div class="skeleton-bar skeleton-number"></div>
					<div class="skeleton-bar skeleton-label"></div>
				</div>
			</div>

			<!-- Welcome Alert -->
			<div class="skeleton-bar skeleton-alert"></div>
		</div>
	</div>
</main>
